# EditorConfig keeps coding styles consistent across editors
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{cpp,cxx,c,h,hpp}]
indent_size = 4
continuation_indent_size = 4

[*.py]
indent_size = 4

[*.{yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
